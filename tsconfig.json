{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015", 
    "lib": ["ES2018", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "financial-reporter.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}